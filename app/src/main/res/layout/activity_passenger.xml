<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PassengerActivity">

    <com.google.android.gms.maps.MapView
            android:layout_width="432dp"
            android:layout_height="622dp"
            android:id="@+id/mapView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="43dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Select driver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="95dp" android:id="@+id/textView3" android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="29dp"/>
</android.support.constraint.ConstraintLayout>