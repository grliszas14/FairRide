<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PassengerActivity">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:gravity="center"
            android:textSize="25dp"
            android:text="Przejazdy"
            android:ems="11"
            android:id="@+id/editText"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="544dp" android:id="@+id/listViewRoutes"
            tools:layout_editor_absoluteX="0dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="85dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:gravity="bottom"
            android:id="@+id/routeInfo"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:visibility="invisible">
        <ImageView
                android:layout_width="65dp"
                android:layout_height="53dp"
                android:layout_gravity="start"
                android:src="@drawable/right_arrow_2"
                android:id="@+id/arrow_imageView"
                android:maxHeight="50dp"
                android:maxWidth="70dp"
                android:layout_weight="0.001"
                android:visibility="visible" app:srcCompat="@drawable/right_arrow_1"/>
        <TextView
                android:text="TextView"
                android:layout_width="147dp"
                android:layout_height="92dp"
                android:id="@+id/route_textView"
                android:visibility="visible"
                android:gravity="left" android:layout_weight="1" android:textSize="18sp"/>
        <Button
                android:text="End ride"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/endRoute_button"
                android:layout_weight="0.2"
                android:gravity="right" android:textAlignment="center"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
