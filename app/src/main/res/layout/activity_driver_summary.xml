<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DriverSummaryActivity"
        android:background="@color/settings">

    <TextView
            android:text="Contributions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contribution"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_bias="0.498"
            android:textSize="40sp"
            android:textColor="#000000"/>
    <TextView
            android:text="Passenger1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pass1text"
            android:textColor="#000000"
            android:textSize="22sp" app:layout_constraintLeft_toLeftOf="parent" android:layout_marginLeft="36dp"
            app:layout_constraintTop_toBottomOf="@+id/contribution" android:layout_marginTop="20dp"
    />
    <TextView
            android:text="Passenger2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pass2text"
            android:textColor="#000000"
            android:textSize="22sp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="36dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/cost1text"/>
    <TextView
            android:text="Passenger3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pass3text"
            android:textColor="#000000"
            android:textSize="22sp" android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/cost2text"
            android:layout_marginStart="36dp" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Passenger4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pass4text"
            android:textColor="#000000"
            android:textSize="22sp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/cost3text"
            android:layout_marginStart="36dp" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="0zł"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cost1text"
            android:textSize="30sp"
            android:textColor="#000000" app:layout_constraintTop_toBottomOf="@+id/pass1text"
            android:layout_marginTop="20dp" android:layout_marginStart="84dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="0zł"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cost2text"
            android:textSize="30sp"
            android:textColor="#000000"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/pass2text"
            android:layout_marginStart="84dp" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="0zł"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cost3text"
            android:textSize="30sp"
            android:textColor="#000000" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/pass3text" android:layout_marginStart="84dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="0zł"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cost4text"
            android:textSize="30sp"
            android:textColor="#000000" android:layout_marginStart="84dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/pass4text"/>
</android.support.constraint.ConstraintLayout>